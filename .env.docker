# Environment Configuration for Docker Services
# Copy this to .env and adjust as needed

APP_NAME="HonduKash ERP"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Database Configuration (PostgreSQL - Multi-Schema Multi-Tenancy)
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=hondukash_erp
DB_USERNAME=postgres
DB_PASSWORD=postgres
# Schema will be set dynamically by tenant middleware
DB_SCHEMA=public

# Redis Configuration
REDIS_HOST=localhost
REDIS_PASSWORD=redis_password
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=hondukash_cache

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Mail Configuration (Mailhog)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@hondukash.local"
MAIL_FROM_NAME="${APP_NAME}"

# File Storage Configuration (MinIO S3-compatible)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=erp-uploads
AWS_URL=http://localhost:9000
AWS_ENDPOINT=http://localhost:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# Backup Storage
BACKUP_DISK=s3
BACKUP_BUCKET=erp-backups

# Search Configuration (Elasticsearch - optional)
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://localhost:7700
# Uncomment below if using Elasticsearch
# SCOUT_DRIVER=elasticsearch
# ELASTICSEARCH_HOST=localhost:9200

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcast Configuration
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=local
PUSHER_APP_KEY=local
PUSHER_APP_SECRET=local
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

# Multi-tenancy Configuration
TENANT_CENTRAL_DOMAIN=erp.local
TENANT_DEFAULT_SCHEMA=public

# Rate Limiting
THROTTLE_REQUESTS=1000
THROTTLE_DECAY_MINUTES=1

# Development Tools
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# Monitoring (optional)
PROMETHEUS_METRICS_ENABLED=false
PROMETHEUS_METRICS_PORT=9091

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Security Configuration
BCRYPT_ROUNDS=12
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,::1,erp.local,*.erp.local